<Window x:Class="WPF_DMX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:colorpicker="clr-namespace:ColorPicker;assembly=ColorPicker"
        xmlns:local="clr-namespace:WPF_DMX"
        mc:Ignorable="d"
        Title="DMX Control" Height="640" Width="480">
    <Grid>
        <colorpicker:StandardColorPicker x:Name="main" Width="200" Height="380"/>
        <colorpicker:PortableColorPicker ColorState="{Binding ElementName=main, Path=ColorState, Mode=TwoWay}" Width="40" Height="40" ColorChanged="PickerControlBase_OnColorChanged"/>   
    </Grid>
</Window>
